# ===================================================================
# BuhBot Frontend Environment Configuration
# ===================================================================
# Copy this file to .env.local and fill in your values
# ===================================================================

# Supabase Configuration (optional in DEV MODE)
# Get from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# API Configuration
NEXT_PUBLIC_API_URL=

# Telegram Bot username (without @) for Login Widget
# Get from: BotFather -> your bot -> username
NEXT_PUBLIC_BOT_NAME=top_buhbot

# DEV MODE - Local Development Without Supabase (pnpm dev only, NOT Docker)
# Enable DEV MODE to bypass Supabase authentication
# IMPORTANT: Never enable in production!
# NEXT_PUBLIC_DEV_MODE=true
# NEXT_PUBLIC_DEV_USER_EMAIL=admin@buhbot.local
