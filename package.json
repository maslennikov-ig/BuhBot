{
  "name": "buhbot",
  "version": "0.20.0",
  "description": "Платформа автоматизации коммуникаций для бухгалтерских фирм через Telegram",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev:all": "./infrastructure/scripts/dev-env.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "type-check": "concurrently \"npm run type-check:backend\" \"npm run type-check:frontend\"",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "knip": "npm run knip:backend && npm run knip:frontend",
    "knip:backend": "cd backend && npx knip",
    "knip:frontend": "cd frontend && npx knip",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "keywords": [
    "telegram-bot",
    "accounting",
    "automation",
    "sla-monitoring",
    "client-retention",
    "бухгалтерия",
    "автоматизация",
    "телеграм-бот"
  ],
  "author": "Igor Maslennikov <maslennikov.ig@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maslennikov-ig/BuhBot.git"
  },
  "bugs": {
    "url": "https://github.com/maslennikov-ig/BuhBot/issues"
  },
  "homepage": "https://github.com/maslennikov-ig/BuhBot#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "knip": "^5.73.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
